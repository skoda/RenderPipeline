{
  "name": "render-pipeline",
  "version": "0.0.0",
  "repository": "git@github.com:skoda/RenderPipeline.git",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:source && npm run build:definitions",
    "watch": "tsc --watch",
    "build:source": "esbuild src/index.ts --bundle --platform=node --keep-names --format=esm --outdir=dist",
    "build:definitions": "tsc --emitDeclarationOnly",
    "demo": "http-server ./demo -p 4242 -d false -c-1",
    "test": "jest",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.46.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
